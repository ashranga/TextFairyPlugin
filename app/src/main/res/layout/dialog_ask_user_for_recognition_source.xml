<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <TextView
        android:id="@+id/txtvwTakePicture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/plugin_ask_user_for_recognition_source_option_height"
        android:textSize="@dimen/plugin_ask_user_for_recognition_source_text_size"
        android:gravity="center"
        android:text="@string/take_picture"/>

    <TextView
        android:id="@+id/txtvwSelectPictureFromGallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/plugin_ask_user_for_recognition_source_option_height"
        android:textSize="@dimen/plugin_ask_user_for_recognition_source_text_size"
        android:gravity="center"
        android:text="@string/select_picture_from_gallery"/>

    <TextView
        android:id="@+id/txtvwReturnToCallingApplication"
        android:layout_width="match_parent"
        android:layout_height="@dimen/plugin_ask_user_for_recognition_source_option_height"
        android:textSize="@dimen/plugin_ask_user_for_recognition_source_text_size"
        android:gravity="center"
        android:text="@string/cancel"/>

</LinearLayout>
